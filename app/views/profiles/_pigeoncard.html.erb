
<% if current_user.pigeons.exists? %>
  <% current_user.pigeons.each do |pigeon| %>
    <div class="card-product">
      <%= cl_image_tag pigeon.photo.key, crop: :fill %>
      <div class="card-product-infos">
        <h2><%= pigeon.name.capitalize %></h2>
      </div>
      <div class="card-product-infos">
        <p><strong>Description:</strong> <%= pigeon.description.capitalize %></p>
        <p><strong>Maximum payload:</strong> <%= pigeon.maximum_payload_weight.to_i %> grams max</p>
        <p><strong>Range:</strong> <%= pigeon.range %> kilometers</p>
        <p><strong>Price per day:</strong> <%= pigeon.price %>â‚¬</p>
      </div>
      <div class="card-product-infos">
        <%= link_to "Edit your pigeon", edit_pigeon_path(pigeon), class: "btn btn-outline-primary btn-sm" %>
        <p><br>
        </p>
        <%= link_to "Delete your pigeon", pigeon_path(pigeon), class: "btn btn-outline-danger btn-sm", data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    } %>
      </div>
    </div>
  <% end %>
<% else %>
  <p>You don't have any pigeons...</p>
<% end %>
<br>
<a class="btn btn-primary btn-sm" href="/pigeons/new">Add a pigeon</a>

