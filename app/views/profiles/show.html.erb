<div class="container">

  <h1>Good to see you <%= @user.first_name.capitalize %>!</h1>

  <hr>

  <h2>Your infos:</h2>

  <hr>

  <ul>
    <li>First name: <strong><%= @user.first_name.capitalize %></strong></li>
    <li>Last name: <strong><%= @user.last_name.capitalize %></strong></li>
    <li>Email: <strong><%= @user.email %></strong></li>
  </ul>
  <a class="btn btn-outline-primary btn-sm" href="/users/edit">Edit your infos</a>

  <hr>

  <h2>Your pigeons:</h2>
  <hr>
    <% if current_user.pigeons.exists? %>
      <% current_user.pigeons.each do |pigeon| %>
      <ul>
        <li><h3><%= pigeon.name.capitalize %></h3></li>
      </ul>
      <p><strong>Description:</strong> <%= pigeon.description.capitalize %></p>
      <p><strong>Address:</strong> <%= pigeon.address %></p>
      <p><strong>Maximum payload:</strong> <%= pigeon.maximum_payload_weight.to_i %> grams max</p>
      <p><strong>Range:</strong> <%= pigeon.range %> kilometers</p>
      <p><strong>Price per day:</strong> <%= pigeon.price %>â‚¬</p>
      <%= link_to "Delete your pigeon", pigeon_path(pigeon), class: "btn btn-outline-danger btn-sm", data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    } %>
      <%= link_to "Edit your pigeon", edit_pigeon_path(pigeon), class: "btn btn-outline-primary btn-sm" %>
      <hr>
      <% end %>
    <% else %>
      <p>You don't have any pigeons...</p>
    <% end %>
    <a class="btn btn-primary btn-sm" href="/pigeons/new">Add a pigeon</a>

  <hr>

  <h2>Current rental:</h2>

  <hr>

  <h2>Your rentals history:</h2>

  <hr>

  <h2>Reviews on your pigeons:</h2>

  <hr>

  <p>Unhappy?</p>

  <div><%#= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline-danger btn-sm" %></div>

</div>
