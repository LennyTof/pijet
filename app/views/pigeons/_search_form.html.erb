<div class="search-form mt-4">
  <%= form_with url: pigeons_path,
                method: :get,
                id: "search-form",
                class: "d-flex g-0 flex-nowrap" do |f| %>
    <div class="">
      <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
    </div>
    <div class="flex-grow-1" data-controller="address-autocomplete" data-address-autocomplete-api-key-value="<%=ENV["MAPBOX_ACCESS_TOKEN"]%>">
      <%= f.text_field :address,
        class: "d-none",
        placeholder: "Address",
        data: {
          address_autocomplete_target: "address",
        }
      %>
    </div>
    <div class="">
      <%= f.submit "Search", class: "btn btn-flat" %>
    </div>
  <% end %>
</div>
