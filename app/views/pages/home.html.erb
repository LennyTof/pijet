<h2 class="text-center"> Browse our best pigeons </h2>
<br>
<br>

<div class="cards">
  <% @pigeons.sample(6).each do |pigeon| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(pigeon.photo.key, crop: :fill) %>); background-position: center; background-size: cover;">
      <div class="card-body d-flex flex-column align-items-center justify-content-center">
        <h5 class="card-title text-center"><%= pigeon.name %></h5>
        <button type="button" class="btn btn-primary">Book me</button>
      </div>
    </div>
  <% end %>
</div>
